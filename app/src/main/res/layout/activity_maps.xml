<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    >

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:text="Create activity"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    // Create activity view
    <RelativeLayout
        android:id="@+id/hiddenView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-400dp"
        android:background="#FCFDFD"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Time: "
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/setTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:text="Set Time" />

        <TextView
            android:id="@+id/diffLabel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Difficulty: "
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            />

        <Spinner
            android:id="@+id/diffList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            />


        <Button
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:text="Place" />

    </RelativeLayout>

    // TimePicker view
    <RelativeLayout
        android:id="@+id/timerView"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="#FCFDFD"
        android:layout_marginTop="-600dp"
        >

        <TimePicker
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/timeSet"
            android:text="select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    // Raid information view
    <RelativeLayout
        android:id="@+id/raidInfoView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-400dp"
        android:background="#F6FAFA">

        <TextView
            android:id="@+id/raidTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Time: " />

        <TextView
            android:id="@+id/raidTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:text="21:52" />

        <TextView
            android:id="@+id/raidDiffLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="Difficulty: " />

        <TextView
            android:id="@+id/raidDiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="50dp"
            android:text="Level 1 *" />

        <TextView
            android:id="@+id/raidNumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:text="Current joined: " />

        <TextView
            android:id="@+id/raidNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="80dp"
            android:text="10" />

        <Button
            android:id="@+id/raidCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:text="cancel" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:background="#E91E63">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E91E63" />

        </ScrollView>


    </RelativeLayout>

</fragment>
